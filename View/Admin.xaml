<UserControl x:Class="AuthoWorkAppp.View.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AuthoWorkAppp.View"
             xmlns:vm ="clr-namespace:AuthoWorkAppp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:AdminViewModel/>
    </UserControl.DataContext>
    <Grid   Background="#FFCF48" >
        <Border CornerRadius="10" Background="#00FA9A"  Height="300" Width="500">
            <StackPanel VerticalAlignment="Center" Width="400">
                <ComboBox ItemsSource="{Binding UserModels}" DisplayMemberPath="Username" Width="200"></ComboBox>

                <TextBox Margin="5" HorizontalAlignment="Center" Width="200" Text="{Binding Username}"/>
                <TextBox Margin="5" HorizontalAlignment="Center" Width="200" Text="{Binding Password}"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
